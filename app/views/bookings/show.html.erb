<h1><%= Challenge.find(@booking.challenge_id).name %></h1>


<% if @booking.status == false %>
  <%= render "bookings/form", bookings: @booking %>
  <%= link_to 'Remove this challenge', booking_path(@booking), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
  <ul>
    <li><p>Category: <%= Challenge.find(@booking.challenge_id).category %></p></li>
    <li><p>Description: <%= Challenge.find(@booking.challenge_id).description %></p></li>
    <li><p>My Goal: <%= @booking.goal %></p></li>
  </ul>

  <h4>My saved Tips</h4>

  <ul>
    <% @saved_tips.each do |tip| %>
      <li>
        <%= tip.name %><br>
        <%= tip.description %><br>
        <%= link_to "Unsave this challenge", saved_tip_path(tip), data: {turbo_method: :delete} %></li>
    <% end %>
  </ul>

  <h4>Challenge Tips</h4>

  <ul>
    <% @tips.each do |tip| %>
      <li>
        <%= tip.name %><br>
        <%= tip.description %><br>
        <%= link_to "Save this challenge", tip_saved_tips_path(tip), data: {turbo_method: :post} %>    </li>
    <% end %>
  </ul>

<% else %>
  <%= link_to "Redo this challenge", challenge_path(@retry_challenge) %>
  <ul>
    <li><p>Category: <%= Challenge.find(@booking.challenge_id).category %></p></li>
    <li><p>Description: <%= Challenge.find(@booking.challenge_id).description %></p></li>
    <li><p>My Goal: <%= @booking.goal %></p></li>
  </ul>

  <h4>My saved Tips</h4>

  <ul>
    <% @saved_tips.each do |tip| %>
      <li>
        <%= tip.name %><br>
        <%= tip.description %><br>
        <%= link_to "Unsave this challenge", saved_tip_path(tip), data: {turbo_method: :delete} %></li>
    <% end %>
  </ul>

  <h4>Challenge Tips</h4>

  <ul>
    <% @tips.each do |tip| %>
      <li>
        <%= tip.name %><br>
        <%= tip.description %><br>
        <%= link_to "Save this challenge", tip_saved_tips_path(tip), data: {turbo_method: :post} %>    </li>
    <% end %>
  </ul>
<% end %>
