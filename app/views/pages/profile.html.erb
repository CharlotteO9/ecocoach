<h1>My profile</h1>
<%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
<br>
<br>

<h2><%= current_user.username %></h2>
<p>
  Welcome againg <%= current_user.seniority.name %>!
  <% if @next_seniority.nil? %>
    <p>You are an amazing eco citizen! </p>
  <% else %>
    <p>You are on you way to become <%= @next_seniority %></p>
  <% end %>
</p>
<br>
<br>

<h2>My challenges</h2>
<%= link_to "Add new challenges", challenges_path %>
<br>
<br>

<h4>On going challenges</h4>
<ol>
  <% @on_going_bookings.each do |booking| %>
    <li>
      <p><%= Challenge.find(booking.challenge_id).name %></p>
      <p><%= Challenge.find(booking.challenge_id).category %></p>
      <p><%= Challenge.find(booking.challenge_id).description %></p>
      <%= link_to "details", booking_path(booking) %><br>
    </li>
  <% end %>
</ol>
<br>
<br>

<h4>Past challenges</h4>
<ol>
  <% @past_bookings.each do |booking| %>
    <li>
      <p><%= Challenge.find(booking.challenge_id).name %></p>
      <p><%= Challenge.find(booking.challenge_id).category %></p>
      <p><%= Challenge.find(booking.challenge_id).description %></p>
      <%= link_to "details", booking_path(booking) %><br>
    </li>
  <% end %>
</ol>
<br>

<h2>My Tips</h2>
