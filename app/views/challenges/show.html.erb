<h1><%= @challenge.name%></h1>

<%= render "bookings/form", bookings: @booking %>
<br>

<ul>
    <li>
      <p>category: <%= @challenge.category %></p>
    </li>
    <li>
      <p>description: <%= @challenge.description %></p>
    </li>
</ul>

<h4>My saved Tips</h4>

<ul>
  <% @saved_tips.each do |tip| %>
    <li>
      <%= tip.name %><br>
      <%= tip.description %><br>
      <%= link_to "Unsave this challenge", tip_saved_tips_path(tip), data: {turbo_method: :delete} %></li>
  <% end %>
</ul>

<h4>Challenge Tips</h4>

<ul>
  <% @tips.each do |tip| %>
    <li>
      <%= tip.name %><br>
      <%= tip.description %><br>
      <%= link_to "Save this challenge", tip_saved_tips_path(tip), data: {turbo_method: :post} %>    </li>
  <% end %>
</ul>

