<div class="cardtips"
      data-controller="save-tip">
  <div class="<%= tip.booking.challenge.category.downcase %>-icon tipsimage">
    <i class="fa-solid <%= find_icon(tip.booking.challenge.category) %>"></i>
  </div>
  <li>
    <h5><strong><%= tip.name %></strong></h5>
    <% if current_user.saved_user_tips.where(usertip: tip).empty? %>
      <span data-action="click->save-tip#save" data-save-tip-url-param="<%= usertip_saved_user_tips_path(tip) %>" class="tipsicon mt-2 me-2">
        <i class="fa-regular fa-bookmark"></i>
      </span>
    <% else %>
      <% sut = current_user.saved_user_tips.select{ |sut| sut if sut.usertip_id == tip.id } %>
      <span data-action="click->save-tip#unsave" data-save-tip-url-param="<%= saved_user_tip_path(sut) %>" class="tipsicon mt-2 me-2">
        <i class="fa fa-bookmark"></i>
      </span>
    <% end %>
    <p class="description desc-truncate" data-action="click->tips-card#revealDescription"><%= tip.description %></p>
    <%# <p>Challenge category: <%= tip.booking.challenge.category  %>
  </li>
</div>
